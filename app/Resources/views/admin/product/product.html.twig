{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                <article>
                    <header>
                        <h2>{{ product.name }}</h2>
                    </header>

                    <p>
                        Category: {{ product.category.name }}
                    </p>
                    <p>
                        Model: {{ product.model }},
                        Quantity: {{ product.qtty }},
                        Price: {{ product.price }}
                    </p>

                    <small class="owner">
                        Owner: {{ product.owner }}
                    </small>

                    <footer>
                        <div class="pull-right">
                            {% if app.getUser() and (app.getUser().isOwner(product) or app.getUser().isAdmin()) %}
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('product_edit', {'id' : product.id}) }}">Edit &raquo;</a>
                                <a class="btn btn-default btn-xs"
                                   href="{{ path('product_delete', {'id' : product.id}) }}">Delete &raquo;</a>
                            {% endif %}
                            <a class="btn btn-default btn-xs"
                               href="{{ path('shop_index') }}">back &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        </div>
    </div>
{% endblock %}