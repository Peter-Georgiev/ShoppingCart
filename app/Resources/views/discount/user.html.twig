{% extends 'base.html.twig' %}

{% block countInCart %}
    {# •	Count add to carts product #}
    {# defined works with variable names #}

    {% if payments is defined %}
        <span class="badge">{{ payments|length }}</span>
    {% endif %}

{% endblock %}

{% block main %}

    {% if danger is defined %}
        <div class="container body-content">
            <h1 class="text-danger text-center">{{ danger }}</h1>
        </div>
    {% endif %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('discount_user') }}" method="POST">
                <fieldset>
                    <legend>New Discount User</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="discount_startDate">Start Date Time</label>
                        <div class="col-sm-4 ">
                            <input type="datetime-local" class="form-control" id="discount_startDate"
                                   name="discount[startDate]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="discount_endDate">End Date Time</label>
                        <div class="col-sm-4 ">
                            <input type="datetime-local" class="form-control" id="discount_endDate"
                                   name="discount[endDate]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="discount_percent">Percent Discount</label>
                        <div class="col-sm-4 ">
                            <input type="number" step="any" class="form-control" id="discount_percent"
                                   placeholder="Percent Discount - %" name="discount[percent]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="discount_userDays">Day's User</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="discount_userDays"
                                   placeholder="Day's User" name="discount[userDays]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="discount_userDays">Cash's User</label>
                        <div class="col-sm-4 ">
                            <input type="number" step="any" class="form-control" id="discount_userCash"
                                   placeholder="Cash's User" name="discount[userCash]">
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('shop_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>

                </fieldset>
            </form>
        </div>
    </div>

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <label class="text-center">Текущи промоции</label>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th class="col-sm-2 ">Start Date Discount</th>
                    <th class="col-sm-2 ">End Date Discount</th>
                    <th class="col-sm-1 ">Percent</th>
                    <th class="col-sm-1 ">Days</th>
                    <th class="col-sm-1 ">Cash</th>
                </tr>
                </thead>

                {% for discount in discountUser %}
                        {% if ((discount.startDate|date('d.m.Y \\ H:i:s')) <= date|date('d.m.Y \\ H:i:s')) and
                            ((date|date('d.m.Y \\ H:i:s') <= discount.endDate|date('d.m.Y \\ H:i:s'))) %}
                            <tr>
                                <td>{{ discount.startDate|date('d.m.Y \\ H:i:s') }}</td>
                                <td>{{ discount.endDate|date('d.m.Y \\ H:i:s') }}</td>
                                <td>{{ discount.percent }}%</td>
                                {% if discount.userDays != null %}
                                    <td>{{ discount.userDays }}</td>
                                {% else %}
                                    <td>Don't Days</td>
                                {% endif %}
                                {% if discount.userCash != null %}
                                    <td>{{ discount.userCash }}</td>
                                {% else %}
                                    <td>Don't Cash</td>
                                {% endif %}
                            </tr>
                        {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <label class="text-center">Бъдещи промоции</label>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th class="col-sm-2 ">Start Date Discount</th>
                    <th class="col-sm-2 ">End Date Discount</th>
                    <th class="col-sm-1 ">Percent</th>
                    <th class="col-sm-1 ">Days</th>
                    <th class="col-sm-1 ">Cash</th>
                </tr>
                </thead>

                {% for discount in discountUser %}
                    {% if (discount.startDate|date('d.m.Y \\ H:i:s')) > date|date('d.m.Y \\ H:i:s') %}
                            <tr>
                                <td>{{ discount.startDate|date('d.m.Y \\ H:i:s') }}</td>
                                <td>{{ discount.endDate|date('d.m.Y \\ H:i:s') }}</td>
                                <td>{{ discount.percent }}%</td>
                                {% if discount.userDays != null %}
                                    <td>{{ discount.userDays }}</td>
                                {% else %}
                                    <td>Don't Days</td>
                                {% endif %}
                                {% if discount.userCash != null %}
                                    <td>{{ discount.userCash }}</td>
                                {% else %}
                                    <td>Don't Cash</td>
                                {% endif %}
                            </tr>
                        {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <label class="text-center">Стари промоции</label>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th class="col-sm-2 ">Start Date Discount</th>
                    <th class="col-sm-2 ">End Date Discount</th>
                    <th class="col-sm-1 ">Percent</th>
                    <th class="col-sm-1 ">Days</th>
                    <th class="col-sm-1 ">Cash</th>
                </tr>
                </thead>

                {% for discount in discountUser %}
                        {% if (discount.endDate|date('d.m.Y \\ H:i:s')) < date|date('d.m.Y \\ H:i:s') %}
                            <tr>
                                <td>{{ discount.startDate|date('d.m.Y \\ H:i:s') }}</td>
                                <td>{{ discount.endDate|date('d.m.Y \\ H:i:s') }}</td>
                                <td>{{ discount.percent }}%</td>
                                {% if discount.userDays != null %}
                                    <td>{{ discount.userDays }}</td>
                                {% else %}
                                    <td>Don't Days</td>
                                {% endif %}
                                {% if discount.userCash != null %}
                                    <td>{{ discount.userCash }}</td>
                                {% else %}
                                    <td>Don't Cash</td>
                                {% endif %}
                            </tr>
                        {% endif %}
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}