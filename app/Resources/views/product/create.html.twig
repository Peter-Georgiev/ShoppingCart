{% extends 'base.html.twig' %}

{% block countInCart %}
    {# â€¢	Count add to carts product #}
    {# defined works with variable names #}

    {% if payments is defined %}
        <span class="badge">{{ payments|length }}</span>
    {% endif %}

{% endblock %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('product_create') }}" method="POST">
                <fieldset>
                    <legend>New Product</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="category_name">Product Category</label>
                        <div class="col-sm-4 ">
                            <select type="text" class="form-control" id="category_name" placeholder="Product Category"
                                   name="category[name]">
                                {% for category in categories %}
                                <option  value="{{ category.name }}" >{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_name">Product Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="product_name" placeholder="Product Name"
                                   name="product[name]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_model">Model</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="product_model" placeholder="Model"
                            name="product[model]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_qtty">Quantity</label>
                        <div class="col-sm-4 ">
                            <input type="number" class="form-control" id="product_qtty" placeholder="Quantity"
                                   name="product[qtty]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_price">Price</label>
                        <div class="col-sm-4 ">
                            <input type="number" step="any" class="form-control" id="product_price" placeholder="Price"
                                   name="product[price]">
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('shop_index') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>


                </fieldset>
            </form>
        </div>
    </div>



    <div class="container body-content span=8 offset=2">
        <div class="well">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th class="col-sm-2 ">Product Name</th>
                    <th class="col-sm-2 ">Model</th>
                    <th class="col-sm-2 ">Quantity</th>
                    <th class="col-sm-2 ">Price</th>
                </tr>
                <tbody>
                </thead>

                {% for product in products %}
                    <form class="form-horizontal" action="{{ path('product_view', {id: product.id}) }}" method="POST">
                        <tr>
                            <td class="col-sm-2 ">
                                <input class="form-control" id="user_username"
                                       name="user[username]" value="{{ product.name }}" disabled>
                            </td>
                            <td class="col-sm-2 ">
                                <input class="form-control" id="user_firstName"
                                       name="user[firstName]" value="{{ product.model }}" disabled>
                            </td>
                            <td class="col-sm-2 ">
                                <input class="form-control" id="user_lastName"
                                       name="user[lastName]" value="{{ product.qtty }}" disabled>
                            </td>
                            <td class="col-sm-2 ">
                                <input class="form-control" id="user_lastName"
                                       name="user[lastName]" value="{{ product.price }}" disabled>
                            </td>

                            <td class="col-sm-1">
                                <div class="col-sm-1 col-sm-offset-1">
                                    <button type="submit" class="btn btn-primary">Modified</button>
                                </div>
                            </td>

                        </tr>
                    </form>
                {% endfor %}

                {{ form_row(form._token) }}

                </tbody>
            </table>

        </div>
    </div>

{% endblock %}