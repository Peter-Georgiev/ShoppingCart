{% extends 'base.html.twig' %}

{% block body_id 'profile' %}

{% block countInCart %}
    {# â€¢	Count add to carts product #}
    {# defined works with variable names #}
    {% if payments is defined %}
        <span class="badge">{{ payments|length }}</span>
    {% endif %}

{% endblock %}

{% block main %}
    <div>
        <label>Username: </label>
        {{ user.username }}
        <br>
        <label>Full name: </label>
        {{ user.firstName }} {{ user.lastName }}
        <br>
        <label>Date of registration: </label>
        {{ user.regTime|date('d.m.Y \\ H:i:s') }}
        <br>
        <label>Your balance: </label>
        <label class="text-info">{{ user.cash }} BGN</label>
        <br>
        <label>Role: </label>
        <label class="text-warning">{{ role }}</label>
    </div>
    {% if app.getUser() and app.getUser().isAdmin() %}
        <div>
            <a class="btn btn-danger btn-xs"
               href="{{ path('users_view', {'users' : app.getUser()}) }}">EDIT USERS &raquo;</a>
        </div>
    {% endif %}
{% endblock %}